-->
<Rules>
  <Rule Simulator="Prepar3d" TitleContains="Aerosoft A3">
    <NavigationLights Ignore="True" />
    <BeaconLights Ignore="True" />
    <TaxiLight Ignore="True" />
    <StrobeLights Ignore="True" />
    <LandingLights Ignore="True" />
    <Flaps>
      <Flap Index="0" Text="UP" />
      <Flap Index="1" Text="CONF 1" />
      <Flap Index="2" Text="CONF 1+F" />
      <Flap Index="3" Text="CONF 2" />
      <Flap Index="4" Text="CONF 3" />
      <Flap Index="5" Text="FULL" />
    </Flaps>
  </Rule>
  <Rule Simulator="FSX" TitleContains="Aerosoft A3">
    <NavigationLights Ignore="True" />
    <BeaconLights Ignore="True" />
    <TaxiLight Ignore="True" />
    <StrobeLights Ignore="True" />
    <LandingLights Ignore="True" />
    <Flaps>
      <Flap Index="0" Text="UP" />
      <Flap Index="1" Text="CONF 1" />
      <Flap Index="2" Text="CONF 1+F" />
      <Flap Index="3" Text="CONF 2" />
      <Flap Index="4" Text="CONF 3" />
      <Flap Index="5" Text="FULL" />
    </Flaps>
  </Rule>
</Rules>
