<Rules>
  <!--
    Rules specific to the FlightFactor A320 Aircraft
  -->
  <Rule Simulator="X-Plane" TitleContains="FlightFactor A320">
    <BeaconLights>
      <Key Type="Boolean" Key="a320/Overhead/LightBeacon"/>
    </BeaconLights>
    <LandingLights>
      <Key Type="Int" Key="a320/Overhead/LightLandL" Value="2"/>
      <Key Type="Int" Key="a320/Overhead/LightLandR" Value="2"/>
    </LandingLights>
    <NavigationLights>
      <Key Type="Int" Key="a320/Overhead/LightLogo" Value="1|2"/>
    </NavigationLights>
    <!-- 1 means strobe light is on AUTO, rule violations ignore it -->
    <StrobeLights IgnoreIf="1">
      <Key Type="Int" Key="a320/Overhead/LightStrobe" Value="2"/>
    </StrobeLights>
    <TaxiLight>
      <Key Type="Int" Key="a320/Overhead/LightNose" Value="1|2"/>
    </TaxiLight>
    <WingLight>
      <Key Type="Boolean" Key="a320/Overhead/LightWing"/>
    </WingLight>
    <Flaps>
      <Flap Index="0" Text="UP" />
      <Flap Index="1" Text="CONF 1" />
      <Flap Index="2" Text="CONF 2" />
      <Flap Index="3" Text="CONF 3" />
      <Flap Index="4" Text="FULL" />
    </Flaps>
  </Rule>
</Rules>