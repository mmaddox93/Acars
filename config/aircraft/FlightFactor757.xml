<Rules>
  <!--
    Rules specific to the FlightFactor B757 Aircraft (v2.5.x and up)
  -->
  <Rule Simulator="X-Plane" TitleContains="Boeing 757">
    <NavigationLights>
      <Key Type="Int" Key="sim/cockpit2/switches/navigation_lights_on" Value="1"/>
    </NavigationLights>
    <BeaconLights>
      <Key Type="Int" Key="sim/cockpit2/switches/beacon_on" Value="1"/>
    </BeaconLights>
    <TaxiLight>
      <Key Type="FloatArray" Key="sim/cockpit2/switches/landing_lights_switch" Index="2" Value="1"/>
    </TaxiLight>
    <LandingLights>
      <Key Type="FloatArray" Key="sim/cockpit2/switches/landing_lights_switch" Index="0" Value="1"/>
      <Key Type="FloatArray" Key="sim/cockpit2/switches/landing_lights_switch" Index="1" Value="1"/>
    </LandingLights>
    <StrobeLights>
      <Key Type="Int" Key="sim/cockpit2/switches/strobe_lights_on" Value="1"/>
    </StrobeLights>
    <WingLight>
      <Key Type="FloatArray" Key="sim/cockpit2/switches/generic_lights_switch" Index="0" Value="1"/>
    </WingLight>
    <LogoLight>
      <Key Type="FloatArray" Key="sim/cockpit2/switches/generic_lights_switch" Index="3" Value="1"/>
    </LogoLight>
  </Rule>
</Rules>
